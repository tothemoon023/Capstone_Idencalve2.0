# Database Configuration
DATABASE_URL="postgresql://username:password@localhost:5432/idenclave_db"

# Server Configuration
PORT=4000
NODE_ENV=development
FRONTEND_URL=http://localhost:3000

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Solana Configuration
SOLANA_NETWORK=devnet
SOLANA_RPC_URL=https://api.devnet.solana.com

# IPFS Configuration (for document storage)
IPFS_GATEWAY=https://ipfs.io/ipfs/
IPFS_API_URL=https://ipfs.infura.io:5001/api/v0

# File Upload Configuration
MAX_FILE_SIZE=10485760 # 10MB in bytes
ALLOWED_FILE_TYPES=image/jpeg,image/png,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000 # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# External Services (for verification)
VERIFICATION_API_KEY=your-verification-service-api-key
VERIFICATION_API_URL=https://api.verification-service.com

# Monitoring
SENTRY_DSN=your-sentry-dsn-for-error-tracking
